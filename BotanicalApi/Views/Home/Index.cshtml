@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Botanical UI</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <h1>Botanical UI</h1>

    <section>
        <h2>Crear planta</h2>
        <form id="createForm">
            <input id="name" placeholder="Name" required />
            <input id="scientificName" placeholder="Scientific name" />
            <input id="family" placeholder="Family" />
            <button type="submit">Crear</button>
        </form>
    </section>

    <section>
        <h2>Lista</h2>
        <table id="plantsTable" border="1">
            <thead><tr><th>Name</th><th>Scientific</th><th>Family</th><th>Acciones</th></tr></thead>
            <tbody></tbody>
        </table>
    </section>

    <script src="/js/app.js"></script>
</body>
</html>
